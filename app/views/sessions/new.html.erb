<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email%>
    <%= text_field_tag :email, "", class: "email-control" %>
  </div>
  <div class="form-pass">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "password-control" %>
  </div>
  <%= submit_tag "Login", class: 'btn btn-default btn-lg btn-submit' %>
  <%= link_to "Create Account", new_user_path, class: 'create-account' %>
<% end %>

